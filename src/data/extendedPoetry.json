  "poetry": [
    {
      "id": "t001",
      "title": "静夜思",
      "content": [
        "床前明月光，",
        "疑是地上霜。",
        "举头望明月，",
        "低头思故乡。"
      ],
      "author": "李白",
      "dynasty": "唐",
      "tags": ["思乡", "月亮", "夜晚", "五言绝句"],
      "category": "五言绝句",
      "famousLine": "举头望明月，低头思故乡。"
    },
    {
      "id": "t002",
      "title": "春晓",
      "content": [
        "春眠不觉晓，",
        "处处闻啼鸟。",
        "夜来风雨声，",
        "花落知多少。"
      ],
      "author": "孟浩然",
      "dynasty": "唐",
      "tags": ["春天", "自然", "花卉", "五言绝句"],
      "category": "五言绝句",
      "famousLine": "春眠不觉晓，处处闻啼鸟。"
    },
    {
      "id": "t003",
      "title": "登鹳雀楼",
      "content": [
        "白日依山尽，",
        "黄河入海流。",
        "欲穷千里目，",
        "更上一层楼。"
      ],
      "author": "王之涣",
      "dynasty": "唐",
      "tags": ["登高", "黄河", "哲理", "五言绝句"],
      "category": "五言绝句",
      "famousLine": "欲穷千里目，更上一层楼。"
    },
    {
      "id": "t004",
      "title": "相思",
      "content": [
        "红豆生南国，",
        "春来发几枝。",
        "愿君多采撷，",
        "此物最相思。"
      ],
      "author": "王维",
      "dynasty": "唐",
      "tags": ["爱情", "相思", "植物", "五言绝句"],
      "category": "五言绝句",
      "famousLine": "此物最相思。"
    },
    {
      "id": "t005",
      "title": "鹿柴",
      "content": [
        "空山不见人，",
        "但闻人语响。",
        "返景入深林，",
        "复照青苔上。"
      ],
      "author": "王维",
      "dynasty": "唐",
      "tags": ["山水", "自然", "幽静", "五言绝句"],
      "category": "五言绝句",
      "famousLine": "空山不见人，但闻人语响。"
    },
    {
      "id": "t006",
      "title": "悯农",
      "content": [
        "锄禾日当午，",
        "汗滴禾下土。",
        "谁知盘中餐，",
        "粒粒皆辛苦。"
      ],
      "author": "李绅",
      "dynasty": "唐",
      "tags": ["农业", "勤劳", "粮食", "五言绝句"],
      "category": "五言绝句",
      "famousLine": "谁知盘中餐，粒粒皆辛苦。"
    },
    {
      "id": "t007",
      "title": "江雪",
      "content": [
        "千山鸟飞绝，",
        "万径人踪灭。",
        "孤舟蓑笠翁，",
        "独钓寒江雪。"
      ],
      "author": "柳宗元",
      "dynasty": "唐",
      "tags": ["冬天", "孤独", "自然", "五言绝句"],
      "category": "五言绝句",
      "famousLine": "孤舟蓑笠翁，独钓寒江雪。"
    },
    {
      "id": "t008",
      "title": "游子吟",
      "content": [
        "慈母手中线，",
        "游子身上衣。",
        "临行密密缝，",
        "意恐迟迟归。"
      ],
      "author": "孟郊",
      "dynasty": "唐",
      "tags": ["母爱", "亲情", "游子", "五言古诗"],
      "category": "五言古诗",
      "famousLine": "慈母手中线，游子身上衣。"
    },
    {
      "id": "t009",
      "title": "赋得古原草送别",
      "content": [
        "离离原上草，",
        "一岁一枯荣。",
        "野火烧不尽，",
        "春风吹又生。"
      ],
      "author": "白居易",
      "dynasty": "唐",
      "tags": ["送别", "自然", "生命力", "五言律诗"],
      "category": "五言律诗",
      "famousLine": "野火烧不尽，春风吹又生。"
    },
    {
      "id": "t010",
      "title": "咏鹅",
      "content": [
        "鹅，鹅，鹅，",
        "曲项向天歌。",
        "白毛浮绿水，",
        "红掌拨清波。"
      ],
      "author": "骆宾王",
      "dynasty": "唐",
      "tags": ["动物", "儿童", "自然", "五言绝句"],
      "category": "五言绝句",
      "famousLine": "白毛浮绿水，红掌拨清波。"
    },
    {
      "id": "t011",
      "title": "寻隐者不遇",
      "content": [
        "松下问童子，",
        "言师采药去。",
        "只在此山中，",
        "云深不知处。"
      ],
      "author": "贾岛",
      "dynasty": "唐",
      "tags": ["隐居", "山水", "寻访", "五言绝句"],
      "category": "五言绝句",
      "famousLine": "只在此山中，云深不知处。"
    },
    {
      "id": "t012",
      "title": "绝句",
      "content": [
        "两个黄鹂鸣翠柳，",
        "一行白鹭上青天。",
        "窗含西岭千秋雪，",
        "门泊东吴万里船。"
      ],
      "author": "杜甫",
      "dynasty": "唐",
      "tags": ["春天", "自然", "动物", "七言绝句"],
      "category": "七言绝句",
      "famousLine": "两个黄鹂鸣翠柳，一行白鹭上青天。"
    },
    {
      "id": "t013",
      "title": "望庐山瀑布",
      "content": [
        "日照香炉生紫烟，",
        "遥看瀑布挂前川。",
        "飞流直下三千尺，",
        "疑是银河落九天。"
      ],
      "author": "李白",
      "dynasty": "唐",
      "tags": ["山水", "瀑布", "自然", "七言绝句"],
      "category": "七言绝句",
      "famousLine": "飞流直下三千尺，疑是银河落九天。"
    },
    {
      "id": "t014",
      "title": "早发白帝城",
      "content": [
        "朝辞白帝彩云间，",
        "千里江陵一日还。",
        "两岸猿声啼不住，",
        "轻舟已过万重山。"
      ],
      "author": "李白",
      "dynasty": "唐",
      "tags": ["旅行", "山水", "长江", "七言绝句"],
      "category": "七言绝句",
      "famousLine": "两岸猿声啼不住，轻舟已过万重山。"
    },
    {
      "id": "t015",
      "title": "枫桥夜泊",
      "content": [
        "月落乌啼霜满天，",
        "江枫渔火对愁眠。",
        "姑苏城外寒山寺，",
        "夜半钟声到客船。"
      ],
      "author": "张继",
      "dynasty": "唐",
      "tags": ["夜晚", "孤独", "寺庙", "七言绝句"],
      "category": "七言绝句",
      "famousLine": "月落乌啼霜满天，江枫渔火对愁眠。"
    },
    {
      "id": "t016",
      "title": "水调歌头",
      "content": [
        "明月几时有？把酒问青天。",
        "不知天上宫阙，今夕是何年。",
        "我欲乘风归去，又恐琼楼玉宇，高处不胜寒。",
        "起舞弄清影，何似在人间。"
      ],
      "author": "苏轼",
      "dynasty": "宋",
      "tags": ["月亮", "中秋", "哲理", "词"],
      "category": "词",
      "famousLine": "但愿人长久，千里共婵娟。"
    },
    {
      "id": "t017",
      "title": "念奴娇·赤壁怀古",
      "content": [
        "大江东去，浪淘尽，千古风流人物。",
        "故垒西边，人道是，三国周郎赤壁。",
        "乱石穿空，惊涛拍岸，卷起千堆雪。",
        "江山如画，一时多少豪杰。"
      ],
      "author": "苏轼",
      "dynasty": "宋",
      "tags": ["历史", "英雄", "长江", "词"],
      "category": "词",
      "famousLine": "大江东去，浪淘尽，千古风流人物。"
    },
    {
      "id": "t018",
      "title": "虞美人",
      "content": [
        "春花秋月何时了？往事知多少。",
        "小楼昨夜又东风，故国不堪回首月明中。",
        "雕栏玉砌应犹在，只是朱颜改。",
        "问君能有几多愁？恰似一江春水向东流。"
      ],
      "author": "李煜",
      "dynasty": "南唐",
      "tags": ["亡国", "悲伤", "月亮", "词"],
      "category": "词",
      "famousLine": "问君能有几多愁？恰似一江春水向东流。"
    },
    {
      "id": "t019",
      "title": "声声慢",
      "content": [
        "寻寻觅觅，冷冷清清，凄凄惨惨戚戚。",
        "乍暖还寒时候，最难将息。",
        "三杯两盏淡酒，怎敌他、晚来风急？",
        "雁过也，正伤心，却是旧时相识。"
      ],
      "author": "李清照",
      "dynasty": "宋",
      "tags": ["悲伤", "孤独", "秋天", "词"],
      "category": "词",
      "famousLine": "寻寻觅觅，冷冷清清，凄凄惨惨戚戚。"
    },
    {
      "id": "t020",
      "title": "满江红",
      "content": [
        "怒发冲冠，凭栏处、潇潇雨歇。",
        "抬望眼，仰天长啸，壮怀激烈。",
        "三十功名尘与土，八千里路云和月。",
        "莫等闲、白了少年头，空悲切！"
      ],
      "author": "岳飞",
      "dynasty": "宋",
      "tags": ["爱国", "英雄", "壮志", "词"],
      "category": "词",
      "famousLine": "莫等闲、白了少年头，空悲切！"
    },
    {
      "id": "t021",
      "title": "送元二使安西",
      "content": [
        "渭城朝雨浥轻尘，",
        "客舍青青柳色新。",
        "劝君更尽一杯酒，",
        "西出阳关无故人。"
      ],
      "author": "王维",
      "dynasty": "唐",
      "tags": ["送别", "友情", "离别", "七言绝句"],
      "category": "七言绝句",
      "famousLine": "劝君更尽一杯酒，西出阳关无故人。"
    },
    {
      "id": "t022",
      "title": "九月九日忆山东兄弟",
      "content": [
        "独在异乡为异客，",
        "每逢佳节倍思亲。",
        "遥知兄弟登高处，",
        "遍插茱萸少一人。"
      ],
      "author": "王维",
      "dynasty": "唐",
      "tags": ["思乡", "重阳节", "亲情", "七言绝句"],
      "category": "七言绝句",
      "famousLine": "独在异乡为异客，每逢佳节倍思亲。"
    },
    {
      "id": "t023",
      "title": "望天门山",
      "content": [
        "天门中断楚江开，",
        "碧水东流至此回。",
        "两岸青山相对出，",
        "孤帆一片日边来。"
      ],
      "author": "李白",
      "dynasty": "唐",
      "tags": ["山水", "长江", "自然", "七言绝句"],
      "category": "七言绝句",
      "famousLine": "两岸青山相对出，孤帆一片日边来。"
    },
    {
      "id": "t024",
      "title": "饮湖上初晴后雨",
      "content": [
        "水光潋滟晴方好，",
        "山色空蒙雨亦奇。",
        "欲把西湖比西子，",
        "淡妆浓抹总相宜。"
      ],
      "author": "苏轼",
      "dynasty": "宋",
      "tags": ["西湖", "山水", "比喻", "七言绝句"],
      "category": "七言绝句",
      "famousLine": "欲把西湖比西子，淡妆浓抹总相宜。"
    },
    {
      "id": "t025",
      "title": "忆江南",
      "content": [
        "江南好，风景旧曾谙。",
        "日出江花红胜火，",
        "春来江水绿如蓝。",
        "能不忆江南？"
      ],
      "author": "白居易",
      "dynasty": "唐",
      "tags": ["江南", "春天", "回忆", "词"],
      "category": "词",
      "famousLine": "日出江花红胜火，春来江水绿如蓝。"
    },
    {
      "id": "t026",
      "title": "凉州词",
      "content": [
        "葡萄美酒夜光杯，",
        "欲饮琵琶马上催。",
        "醉卧沙场君莫笑，",
        "古来征战几人回。"
      ],
      "author": "王翰",
      "dynasty": "唐",
      "tags": ["边塞", "战争", "酒", "七言绝句"],
      "category": "七言绝句",
      "famousLine": "醉卧沙场君莫笑，古来征战几人回。"
    },
    {
      "id": "t027",
      "title": "出塞",
      "content": [
        "秦时明月汉时关，",
        "万里长征人未还。",
        "但使龙城飞将在，",
        "不教胡马度阴山。"
      ],
      "author": "王昌龄",
      "dynasty": "唐",
      "tags": ["边塞", "爱国", "月亮", "七言绝句"],
      "category": "七言绝句",
      "famousLine": "但使龙城飞将在，不教胡马度阴山。"
    },
    {
      "id": "t028",
      "title": "芙蓉楼送辛渐",
      "content": [
        "寒雨连江夜入吴，",
        "平明送客楚山孤。",
        "洛阳亲友如相问，",
        "一片冰心在玉壶。"
      ],
      "author": "王昌龄",
      "dynasty": "唐",
      "tags": ["送别", "友情", "冰心", "七言绝句"],
      "category": "七言绝句",
      "famousLine": "洛阳亲友如相问，一片冰心在玉壶。"
    },
    {
      "id": "t029",
      "title": "送杜少府之任蜀州",
      "content": [
        "城阙辅三秦，",
        "风烟望五津。",
        "与君离别意，",
        "同是宦游人。"
      ],
      "author": "王勃",
      "dynasty": "唐",
      "tags": ["送别", "友情", "宦游", "五言律诗"],
      "category": "五言律诗",
      "famousLine": "海内存知己，天涯若比邻。"
    },
    {
      "id": "t030",
      "title": "临江仙",
      "content": [
        "滚滚长江东逝水，",
        "浪花淘尽英雄。",
        "是非成败转头空。",
        "青山依旧在，几度夕阳红。"
      ],
      "author": "杨慎",
      "dynasty": "明",
      "tags": ["长江", "历史", "哲理", "词"],
      "category": "词",
      "famousLine": "青山依旧在，几度夕阳红。"
    },
    {
      "id": "t031",
      "title": "春江花月夜",
      "content": [
        "春江潮水连海平，",
        "海上明月共潮生。",
        "滟滟随波千万里，",
        "何处春江无月明！"
      ],
      "author": "张若虚",
      "dynasty": "唐",
      "tags": ["月亮", "长江", "春天", "七言古诗"],
      "category": "七言古诗",
      "famousLine": "春江潮水连海平，海上明月共潮生。"
    },
    {
      "id": "t032",
      "title": "黄鹤楼送孟浩然之广陵",
      "content": [
        "故人西辞黄鹤楼，",
        "烟花三月下扬州。",
        "孤帆远影碧空尽，",
        "唯见长江天际流。"
      ],
      "author": "李白",
      "dynasty": "唐",
      "tags": ["送别", "友情", "长江", "七言绝句"],
      "category": "七言绝句",
      "famousLine": "孤帆远影碧空尽，唯见长江天际流。"
    },
    {
      "id": "t033",
      "title": "将进酒",
      "content": [
        "君不见黄河之水天上来，",
        "奔流到海不复回。",
        "君不见高堂明镜悲白发，",
        "朝如青丝暮成雪。"
      ],
      "author": "李白",
      "dynasty": "唐",
      "tags": ["酒", "人生", "哲理", "七言古诗"],
      "category": "七言古诗",
      "famousLine": "君不见黄河之水天上来，奔流到海不复回。"
    },
    {
      "id": "t034",
      "title": "望岳",
      "content": [
        "岱宗夫如何？齐鲁青未了。",
        "造化钟神秀，阴阳割昏晓。",
        "荡胸生层云，决眦入归鸟。",
        "会当凌绝顶，一览众山小。"
      ],
      "author": "杜甫",
      "dynasty": "唐",
      "tags": ["登山", "泰山", "壮志", "五言古诗"],
      "category": "五言古诗",
      "famousLine": "会当凌绝顶，一览众山小。"
    },
    {
      "id": "t035",
      "title": "春望",
      "content": [
        "国破山河在，城春草木深。",
        "感时花溅泪，恨别鸟惊心。",
        "烽火连三月，家书抵万金。",
        "白头搔更短，浑欲不胜簪。"
      ],
      "author": "杜甫",
      "dynasty": "唐",
      "tags": ["爱国", "战争", "思乡", "五言律诗"],
      "category": "五言律诗",
      "famousLine": "感时花溅泪，恨别鸟惊心。"
    },
    {
      "id": "t036",
      "title": "登高",
      "content": [
        "风急天高猿啸哀，渚清沙白鸟飞回。",
        "无边落木萧萧下，不尽长江滚滚来。",
        "万里悲秋常作客，百年多病独登台。",
        "艰难苦恨繁霜鬓，潦倒新停浊酒杯。"
      ],
      "author": "杜甫",
      "dynasty": "唐",
      "tags": ["秋天", "长江", "人生", "七言律诗"],
      "category": "七言律诗",
